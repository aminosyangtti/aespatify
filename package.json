{
  "name": "aespatify",
  "version": "1.0.6",
  "description": "Electron app with Spotify integration",
  "main": "main.js",
  "scripts": {
    "start": "NODE_ENV=development electron .",
    "changelog": "auto-changelog -p",
    "pack": "electron-builder --dir",
    "build": "electron-builder --win --linux",
    "publish": "electron-builder --win --linux --publish always"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "electron-log": "^5.1.6",
    "electron-updater": "^6.2.1",
    "express": "^4.17.1",
    "express-rate-limit": "^7.3.1",
    "node-fetch": "^2.6.1",
    "node-vibrant": "^3.2.1-alpha.1",
    "opener": "^1.5.2"
  },
  "devDependencies": {
    "auto-changelog": "^2.4.0",
    "electron": "^13.1.7",
    "electron-builder": "^24.13.3",
    "electron-osx-sign": "^0.6.0",
    "electron-reload": "^1.5.0"
  },
  "author": "aminosyangtti <aminosyangtti@example.com>",
  "build": {
    "appId": "com.aespatify.id",
    "productName": "Aespatify",
    "win": {
      "target": "nsis",
      "icon": "build/logo_blk.png",
      "certificateFile": "{$CODE_SIGN_CERTIFICATE}",
      "certificatePassword": "${CODE_SIGN_PASSWORD}",
      "publisherName": "aminosyangtti"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/logo_blk.png"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "aminosyangtti",
        "repo": "aespatify",
        "token": "${GH_TOKEN}"
      }
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    }
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "unreleased": false
  }
}
